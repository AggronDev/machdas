<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Selleck.todo</title>
    <link rel="stylesheet" href="css/normalize.min.css" />
    <link rel="stylesheet" href="css/foundation.min.css" />
    <link rel="stylesheet" href="css/screen.css" />
    <link rel="stylesheet" href="css/icons/general_enclosed_foundicons.css" />
    <link rel="stylesheet" href="css/icons/general_enclosed_foundicons_ie7.css" />

    <script src="js/vendor/jquery-1.9.1.min.js"></script>
    <script src="js/vendor/jquery-ui-1.10.2.shake.min.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script src="js/vendor/custom.modernizr.js"></script>
    <script src="js/vendor/json2-min.js"></script>
    <script src="js/vendor/underscore-min.js"></script>
    <script src="js/vendor/backbone-min.js"></script>
    <script src="js/vendor/backbone.layoutmanager.js"></script>
    <script src="js/Model/task.js"></script>
    <script src="js/Collection/tasks.js"></script>
    <script src="js/View/form.js"></script>
    <script src="js/View/task.js"></script>
    <script src="js/View/list.js"></script>
    <script src="js/View/footer.js"></script>
    <script src="js/View/app.js"></script>
    <script src="js/selleck.js"></script>
</head>
<body class="antialiased">

    <div id="ajax-loader"></div>
    <input type="hidden" id="tasks-url" value="{{ url('tasks') }}" />
    <input type="hidden" id="task-url" value="{{ url('task') }}" />

    <script type="text/template" id="app">
        <div class="row">
            <div class="small-10 large-10 large-centered small-centered columns">

                <div class="form"></div>
                <div class="list"></div>
                <footer></footer>

                <div id="app-loader"></div>
            </div>
        </div>
    </script>


    <script type="text/template" id="form-template">
        <form id="add-task">
            <div class="row collapse">
                <div class="small-11 columns">
                    <input type="text" class="name" placeholder="New Task" />
                </div>
                <div class="small-1 columns">
                    <input type="submit" class="button prefix secondary" value="+" />
                </div>
            </div>
        </form>
    </script>


    <script type="text/template" id="list-template">
        <form class="custom list"></form>
        <div class="row no-tasks">
            <div class="small-12 columns">
                no tasks! nothin' to do?
            </div>
        </div>
    </script>


    <script type="text/template" id="task-template">
        <div class="row task">
            <div class="small-10 columns">
                <label>
                    <span class="custom checkbox"></span>
                    <span class="name"><%- name %></span>
                </label>
                <form><input type="text" /></form>
            </div>
            <div class="small-2 columns actions">
                <i class="foundicon-remove cancel"></i>
                <i class="foundicon-edit update"></i>
                <i class="foundicon-trash delete"></i>
            </div>
        </div>
    </script>


    <script type="text/template" id="footer-template">
        selleck.todo 0.1.0 - pow, pow, pow!
    </script>

</body>
</html>