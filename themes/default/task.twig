<div class="task" {% if task.marked %} class="marked" {% endif %} >

    <div class="row item">
        <div class="small-10 columns">
            {% if task.marked %}<del>{% endif %}
            <label for="task-{{ task.id }}">
                <input type="checkbox" class="hide"
                       id="task-{{ task.id }}"
                       value="{{ task.id }}"
                       name="id"
                       {% if task.marked %}checked="checked"{% endif %}
                />
                <span class="custom checkbox {% if task.marked %}checked{% endif %}"></span>
                <span>{{ task.name|e }}</span>
            </label>
            {% if task.marked %}</del>{% endif %}
        </div>
        <div class="small-2 columns actions">
            <i class="foundicon-checkmark" {% if task.marked != 1 %}style="display:none"{% endif %}></i>
            <a href="#update-task" class="update"><i data-tooltip class="foundicon-edit has-tip tip-top" title="Edit Task"></i></a>
            <a href="#delete-task" class="delete"><i data-tooltip class="foundicon-remove has-tip tip-top" title="Remove Task"></i></a>
        </div>
    </div>

</div>